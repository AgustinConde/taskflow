## Example environment variables for TaskFlow.Api in development (.env.development)
# Database Connection
ConnectionStrings__DefaultConnection=Server=localhost;Database=TaskFlowDb;User Id=your-local-user;Password=your-local-password;TrustServerCertificate=True;
# SMTP Configuration for Email
Smtp__Host=smtp.gmail.com
Smtp__Port=587
Smtp__User=your-email@gmail.com
Smtp__Pass=your-app-password
Smtp__From=your-email@gmail.com
# JWT Configuration
Jwt__Key=your-secret-key-here-minimum-32-characters
Jwt__Issuer=TaskFlowApi
Jwt__Audience=TaskFlowClient
# Frontend URL
FRONTEND_URL=http://localhost:5173

## Example environment variables for TaskFlow.Api in production (.env.production)
# Database Connection
ConnectionStrings__DefaultConnection=Server=your-production-server.database.windows.net;Database=TaskFlowDb;User Id=your-production-user;Password=your-production-password;TrustServerCertificate=True;
# SMTP Configuration for Email
Smtp__Host=smtp.gmail.com
Smtp__Port=587
Smtp__User=your-production-email@gmail.com
Smtp__Pass=your-production-app-password
# JWT Configuration
Jwt__Key=your-secret-key-here-minimum-32-characters
Jwt__Issuer=TaskFlowApi
Jwt__Audience=TaskFlowClient
# Frontend URL
FRONTEND_URL=https://your-frontend.net
