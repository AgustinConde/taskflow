# Copy this file to azure.ps1 (or another name) and fill in the locations of the configuration
# files that contain your production/staging secrets.

$EnvironmentConfig = @{
    DisplayName = "Azure Hosted Environment"
    Description = @"
Targets the Azure SQL database, Storage Account and SMTP configuration that you keep in
non-tracked files. Use this profile when you need to troubleshoot production using your
local tools.
"@
    Variables = @{
        ASPNETCORE_ENVIRONMENT = "Production"
        DOTNET_ENVIRONMENT = "Production"
        FUNCTIONS_ENVIRONMENT = "Production"
        VITE_TASKFLOW_ENV = "production"
    }
    Files = @(
        @{
            Source = "..\\config\\secrets\\azure\\TaskFlow.Api.appsettings.json"
            Target = "..\\TaskFlow.Api\\appsettings.Local.json"
            Optional = $false
        },
        @{
            Source = "..\\config\\secrets\\azure\\TaskFlow.Functions.local.settings.json"
            Target = "..\\TaskFlow.Functions\\local.settings.json"
            Optional = $false
        },
        @{
            Source = "..\\config\\secrets\\azure\\frontend.env"
            Target = "..\\taskflow-frontend\\.env.local"
            Optional = $true
        }
    )
}
